<div class="
    simple-popover {{extraCssClass}}
    {{#if open}} simple-popover__active{{/if}}
    simple-popover__placement-{{placement}}">
        <div class="simple-popover__button">
            <button class="btn btn-link" ($click)="toggle">{{buttonText}}</button>
        </div>
        {{#if open}}
        <div class="simple-popover__content" ($click)="hide">
            <content></content>
        </div>
        {{/if}}
</div>
