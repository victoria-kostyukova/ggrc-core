<div>
  <content/>

  <div class="people-list">
    <people-list {people}="people" {empty-message}="emptyListMessage" {is-disabled}="isLoading">
      <div class="action-toolbar {{#unless canUnmap}}people-group__readonly-person{{/unless}}">
        <person-data {is-disabled}="isDisabled" person="{.}">
          {{#unless isDisabled}}
            {{#unmapablePerson}}
              <div class="action-toolbar__controls">
                <a href="javascript://" class="info-action unmap" ($click)="unmap(person)">
                  <action-toolbar-control>
                    <i class="fa fa-trash"></i>
                  </action-toolbar-control>
                </a>
              </div>
            {{/unmapablePerson}}
          {{/unless}}
        </person-data>
      </div>
    </people-list>
  </div>
</div>
