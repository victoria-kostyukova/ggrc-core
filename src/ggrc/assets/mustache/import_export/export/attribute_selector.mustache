<div class="attribute-selector">
    <div class="attribute-selector__group">
      <div class="attribute-selector__header">
        <div class="attribute-selector__checkbox">
          <input can-value="showAttributes" type="checkbox" checked/>
        </div>
        <div class="attribute-selector__title">
          Attributes
        </div>
        {{#if showAttributes}}
          <div>
             <a data-action="select_toggle"
                data-type="attributes"
                data-value="true"
                href="javascript://">
                  Select All
              </a>
              /
              <a data-action="select_toggle"
                data-value="false"
                data-type="attributes"
                href="javascript://">
                  None
              </a>
          </div>
        {{/if}}
      </div>
      {{#if showAttributes}}
        <div class="attribute-wrap">
            {{#each attributes}}
              <label title="{{display_name}}">
                <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
                {{display_name}}
              </label>
            {{/each}}
        </div>
      {{/if}}
    </div>

    <div class="attribute-selector__group">
      <div class="attribute-selector__header">
        <div class="attribute-selector__checkbox">
          <input can-value="showMappings" type="checkbox" checked/>
        </div>
        <div class="attribute-selector__title">
          Mappings
        </div>
        {{#if showMappings}}
          <div>
            <a data-action="select_toggle"
              data-type="mappings"
              data-value="true"
              href="javascript://">
                Select All
            </a>
            /
            <a data-action="select_toggle"
              data-value="false"
              data-type="mappings"
              href="javascript://">
                None
            </a>
          </div>
        {{/if}}
      </div>
      {{#if showMappings}}
        <div class="attribute-wrap">
          {{#each mappings}}
            <label title="{{display_name}}">
              <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
              {{display_name}}
            </label>
          {{/each}}
        </div>
      {{/if}}
    </div>

    {{#is type 'Assessment'}}
      <div class="attribute-selector__group">
        <div class="attribute-selector__header">
          <div class="attribute-selector__checkbox">
            <input can-value="showLocalAttributes" type="checkbox" checked/>
          </div>
          <div class="attribute-selector__title">
            Assessment Specific Custom Attributes
          </div>
          {{#if showLocalAttributes}}
            <div>
              <a data-action="select_toggle"
                data-type="local_attributes"
                data-value="true"
                href="javascript://">
                  Select All
              </a>
              /
              <a data-action="select_toggle"
                data-value="false"
                data-type="local_attributes"
                href="javascript://">
                  None
              </a>
            </div>
          {{/if}}
        </div>
        {{#if showLocalAttributes}}
          <div class="attribute-wrap">
            {{#each localAttributes}}
              <label title="{{display_name}}">
                <input can-value="isSelected" type="checkbox" name="{{key}}" checked>
                {{display_name}}
              </label>
            {{/each}}
          </div>
        {{/if}}
      </div>
    {{/is}}
</div>
